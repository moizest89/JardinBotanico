<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".UI.Vivarium.Main.VivariumActivity"
    tools:showIn="@layout/activity_vivarium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vivarium_header_info"
            android:id="@+id/TVVivarium_header"
            android:textColor="@color/primary_text"
            android:padding="15dp"
            android:autoLink="email|phone"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                    <com.moizest89.jbplandelalaguna.Util.ImageViewWithRatio
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cactus_pequenos"
                        android:scaleType="centerCrop"
                        android:id="@+id/IVImage_1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@color/transparent_white_percent_80"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_gravity="bottom"
                        android:text="Cactus"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                    <com.moizest89.jbplandelalaguna.Util.ImageViewWithRatio
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/IVImage_2"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fertilizantes"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent_white_percent_80"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/colorPrimaryDark"
                        android:padding="10dp"
                        android:layout_gravity="bottom"
                        android:text="Fertilizantes, insecticidas y fungicidas"/>

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <!-- -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <com.moizest89.jbplandelalaguna.Util.ImageViewWithRatio
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/frutales_vivarium"
                    android:scaleType="centerCrop"
                    android:id="@+id/IVImage_3"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@color/transparent_white_percent_80"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="bottom"
                    android:text="Frutales"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <com.moizest89.jbplandelalaguna.Util.ImageViewWithRatio
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/IVImage_4"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pascuas_vivarium"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent_white_percent_80"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/colorPrimaryDark"
                    android:padding="10dp"
                    android:layout_gravity="bottom"
                    android:text="Pascuas"/>

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <!-- -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <com.moizest89.jbplandelalaguna.Util.ImageViewWithRatio
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vivarium_rosales"
                    android:scaleType="centerCrop"
                    android:id="@+id/IVImage_5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@color/transparent_white_percent_80"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="bottom"
                    android:text="Rosales"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <com.moizest89.jbplandelalaguna.Util.ImageViewWithRatio
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/IVImage_6"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pascuas_vivarium"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent_white_percent_80"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/colorPrimaryDark"
                    android:padding="10dp"
                    android:layout_gravity="bottom"
                    android:text="Pascuas"/>

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <!-- -->

    </LinearLayout>



</ScrollView>
